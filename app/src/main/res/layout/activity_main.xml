<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#255E78"
            android:gravity="center"
            android:onClick="onTextCleared"
            android:text="Clear"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#255E78"
            android:gravity="center"
            android:onClick="plusMinusSign"
            android:text="+/-"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#255E78"
            android:gravity="center"
            android:onClick="sqrtSign"
            android:text="âˆš"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#255E78"
            android:gravity="center"
            android:onClick="operationClick"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"

                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#0F7DAF"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#870D0D"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#0F7DAF"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#0838E6"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#46FF00"
                android:gravity="center"
                android:onClick="itemNumberClicked"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#0838E6"
                android:gravity="center"
                android:onClick="deleteButtonClicked"
                android:text="DEL"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#850F0F"
                android:gravity="center"
                android:onClick="equalsClick"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>